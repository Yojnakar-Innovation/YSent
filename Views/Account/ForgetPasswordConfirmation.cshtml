@model YSent.Models.PasswordReset

<style>
    /* Your existing styles remain the same */

    /* Add these new styles for validation messages */
    .validation-summary-errors {
        color: #ff3333;
        margin-bottom: 1rem;
        padding: 0.8rem;
        background-color: #fff2f2;
        border-radius: 5px;
        border: 1px solid #ffcdd2;
    }

        .validation-summary-errors ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

    .success-message {
        color: #4CAF50;
        margin-bottom: 1rem;
        padding: 0.8rem;
        background-color: #f1f8e9;
        border-radius: 5px;
        border: 1px solid #c5e1a5;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
            font-size: 0.9rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.8rem;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }
</style>

<div class="page-container">
    <div class="container">
        <div class="image-section">
            <div class="icon-container">
                <div class="lock-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="form-section">
            <h1>Forgot Password</h1>
            <p>Enter your email and we'll send you a link to reset your password.</p>

            @if (TempData["Error"] != null)
            {
                <div class="validation-summary-errors">
                    <p>@TempData["Error"]</p>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="success-message">
                    <p>@TempData["Success"]</p>
                </div>
            }

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "Email Address")
                    @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
                </div>

                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                <button type="submit" class="submit-btn">Send Reset Link</button>
            }
            <a href="@Url.Action("SignIn", "Account")" class="back-link">← Back to Login</a>
        </div>
    </div>
</div>