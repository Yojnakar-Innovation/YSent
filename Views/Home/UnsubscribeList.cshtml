@model YSent.Models.Template

@{
    ViewData["Title"] = "Unsubscribe List";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Include jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Custom CSS -->
    <style>
        /* Custom button styles */
        .btn-inverse {
            background-color: #262626;
            border: 1px solid #262626;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-inverse:hover {
                background-color: #1a1a1a;
            }

        /* Form styling */
        .form-vertical .control-label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-vertical .controls {
            margin-bottom: 20px;
        }

        .form-vertical textarea {
            width: 100%;
            max-width: 500px;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .form-vertical input[type="file"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .table-bordered {
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .table-bordered th,
            .table-bordered td {
                border: 1px solid #ddd;
                padding: 10px;
            }

        .label-info {
            background-color: #2196F3;
            padding: 5px 10px;
            border-radius: 3px;
        }

        hr {
            border-top: 1px solid #ddd;
        }

        .lead a {
            color: #262626;
            text-decoration: none;
        }

            .lead a:hover {
                text-decoration: underline;
            }

        .icon-pencil {
            color: #2196F3;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="span10">
            <div>
                <p class="lead">
                    <a href="https://sendy.co/demo/edit-brand?i=2" data-placement="right" title="Edit brand settings">
                        MockVault <i class="fa fa-pencil icon-pencil"></i>
                    </a>
                </p>
                <p>List: <a href="https://sendy.co/demo/subscribers?i=2&l=8"><span class="label label-info">Teaser page signups</span></a></p>
                <br />
            </div>

            <h2>Mass Unsubscribe via CSV File</h2>
            <br />
            <form action="javascript:alert('Sorry, you can\'t import CSVs in the demo.')" method="POST" accept-charset="utf-8" class="form-vertical" enctype="multipart/form-data" id="import-unsubscribe-form">
                <label class="control-label" for="csv_file"><em>CSV format example:</em></label>
                <table class="table table-bordered table-striped table-condensed" style="width: 300px;">
                    <tbody>
                        <tr>
                            <td>pmorris@gmail.com</td>
                        </tr>
                        <tr>
                            <td>jwebster@gmail.com</td>
                        </tr>
                    </tbody>
                </table>
                <div class="control-group">
                    <div class="controls">
                        <input type="file" class="input-xlarge" id="csv_file" name="csv_file">
                    </div>
                </div>
                <input type="hidden" name="list_id" value="8">
                <input type="hidden" name="app" value="2">
                <br />
                <button type="submit" class="btn btn-inverse"><i class="fa fa-upload"></i> Import</button>
            </form>

            <br />

            <h2>Unsubscribe Email Per Line</h2>
            <br />
            <form action="javascript:alert('Sorry, you can\'t unsubscribe subscribers in the demo.')" method="POST" accept-charset="utf-8" class="form-vertical" enctype="multipart/form-data" id="line-import-form">
                <label class="control-label" for="line">Email to unsubscribe</label>
                <div class="control-group">
                    <div class="controls">
                        <textarea class="input-xlarge" id="line" name="line" rows="10" placeholder="Eg. roxivon@gmail.com"></textarea>
                    </div>
                </div>
                <input type="hidden" name="list_id" value="8">
                <input type="hidden" name="app" value="2">
                <br />
                <button type="submit" class="btn btn-inverse"><i class="fa fa-ban"></i> Unsubscribe</button>
            </form>
        </div>
    </div>

    <!-- Custom JavaScript -->
    <script>
        $(document).ready(function () {
            // Validate CSV import form
            $("#import-unsubscribe-form").validate({
                rules: {
                    csv_file: {
                        required: true
                    }
                },
                messages: {
                    csv_file: "Please upload a CSV file"
                }
            });

            // Validate line import form
            $("#line-import-form").validate({
                rules: {
                    line: {
                        required: true
                    }
                },
                messages: {
                    line: "Please enter at least one email address"
                }
            });
        });
    </script>
</body>
</html>