    <!-- Custom Script -->
    <script>
        $(document).ready(function () {
            // Show/Hide Add List Form
            $("#new-list-btn").click(function () {
                $("#list-form").slideDown("fast");
                $("#list_name").focus();
            });
            $("#close-add-list-btn").click(function () {
                $("#list-form").slideUp("fast");
            });

            // Delete List Modal
            $("a[href='#delete-list']").click(function () {
                const listName = $(this).attr("title").replace("Delete ", "");
                $("#list-to-delete").text(listName);
                $("#delete-list").show();
            });

            // Delete List Button
            $("#delete-list-btn").click(function () {
                if ($("#delete-text").val() === "DELETE") {
                    alert("List deleted successfully!");
                    $("#delete-list").hide();
                } else {
                    alert("Please type the word DELETE to confirm.");
                }
            });

            // Close Modal
            $(".close").click(function () {
                $("#delete-list").hide();
            });
        });
    </script>

